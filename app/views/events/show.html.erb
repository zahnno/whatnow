<div class="event-pic">
    <img src="<%= @event.photo %>" style= "width:475px; height: 475px; margin-top:20px;">
</div>


<div class="description">  
	<div style="font-size: 60px; font-family: arial; font-weight: bold; color: white;">  
    	<%= @event.name %><br>
    </div>
    <div style="text-align: center; font-family: arial; font-size: 22px; margin-bottom: 20px;">
    <%= @event.actualcost %><br>
	<%= @event.description %><br><br>
	<a href="<%= @event.link %>" class="linkto"><%= @event.link %></a><br><br>
    <%= @event.address %><br>
    <%= @event.phone %><br>

    </div>

    <%= link_to "More Events", events_path(@events), class: 'linktomore' %>

</div>

