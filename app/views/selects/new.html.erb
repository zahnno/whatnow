<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Document</title>
	<script src="http://code.jquery.com/jquery-2.0.0.js"></script>

	<script>
		$(document).ready(function(){
		
			$('.intro').fadeIn(1500);
			$('.intro').fadeOut(1500);

		});
	</script>

</head>
<body>
	




<h1 class="intro" style="display: none;">Welcome...</h1>

<%= form_for @select do |f| %>

	
	<%= f.label :group_size %>:&nbsp;	
		<%= label_tag(:group_size, "Solo") %>
			<%= f.radio_button(:group_size, "Solo") %>
		<%= label_tag(:group_size, "Double") %>
		    <%= f.radio_button(:group_size, "Double") %>
		<%= label_tag(:group_size, "Group") %>
			<%= f.radio_button(:group_size, "Group") %>
		<br>


    <%= f.label :interest %>
    	<%= f.select(:interest, @select_interest.map { |value| [value, value] }) %><br>

    <%= f.label :location %>
    	<%= f.text_field :location %><br>

     <%= f.label :sessiontime %>
	 	<%= f.datetime_select :sessiontime, start_year: 2015, discard_minute: true, discard_month: true, discard_year: true, discard_day: true, ampm: true %><br>

	 <%= f.label :cost %>:&nbsp;
		<%= label_tag(:cost, "free") %>
			<%= f.radio_button(:cost, "free") %>
		<%= label_tag(:cost, "$") %>
			<%= f.radio_button(:cost, "$") %>
		<%= label_tag(:cost, "$$") %>
			<%= f.radio_button(:cost, "$$") %>
		<%= label_tag(:cost, "$$$") %>
			<%= f.radio_button(:cost, "$$$") %><br>
	
	 <%= f.submit id: "find" %>

<% end %>

</body>
</html>